{
  "name": "photonflux-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "esbuild index.tsx --bundle --sourcemap --target=es2020 --jsx=automatic --loader:.ts=tsx --outdir=public/assets --watch",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/assets/index.css --minify",
    "build:js": "esbuild index.tsx --bundle --minify --sourcemap --target=es2020 --jsx=automatic --loader:.ts=tsx --outdir=public/assets",
    "build": "npm run build:css && npm run build:js && npm run postbuild",
    "test": "node --test tests/*.test.mjs",
    "clean": "rm -rf public && mkdir -p public/assets",
    "postbuild": "mkdir -p public/vendor && cp node_modules/react-image-crop/dist/ReactCrop.css public/vendor/react-image-crop.css || true"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-image-crop": "^11.0.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.20.2",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2",
    "vite": "^5.4.10",
    "vite-plugin-pwa": "^1.0.3"
  }
}