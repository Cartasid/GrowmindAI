{
  "version": 1,
  "home_assistant_version": "2024.1.0",
  "registries": ["ghcr.io"],
  "addons": [
    {
      "name": "GrowMind AI",
      "slug": "growmind-ai",
      "description": "Intelligent cannabis cultivation assistant for Home Assistant. Monitors climate, lighting, and substrate sensors in real time, generates AI-powered grow plans with Gemini, tracks nutrient schedules, and provides a rich journal for every growth stage.",
      "url": "https://github.com/Cartasid/GrowmindAI",
      "version": "0.1.0",
      "image": "ghcr.io/cartasid/growmind-ai-{arch}",
      "arch": ["aarch64", "amd64"],
      "startup": "services",
      "boot": "auto",
      "init": false,
      "hassio_api": true,
      "hassio_role": "manager",
      "homeassistant_api": true,
      "ingress": true,
      "panel_icon": "mdi:sprout",
      "panel_title": "GrowMind AI",
      "ports": {
        "8080/tcp": null
      },
      "ports_description": {
        "8080/tcp": "Web UI Port"
      },
      "options": {
        "log_level": "info",
        "gemini_api_key": "",
        "gemini_model": "gemini-2.5-flash"
      },
      "schema": {
        "log_level": "list(debug|info|warning|error)?",
        "gemini_api_key": "password",
        "gemini_model": "str?"
      },
      "map": ["share:rw"]
    }
  ]
}
